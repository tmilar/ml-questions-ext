{
  "name": "__MSG_appName__",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "__MSG_appDescription__",
  "icons": {
    "16": "images/melipreguntas-64.png",
    "128": "images/melipreguntas-128.png",
    "256": "images/melipreguntas.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "src/bg/chromereload.js",
      "src/bg/background.js"
    ]
  },
  "permissions": [
    "cookies",
    "*://*.mercadolibre.com/*",
    "*://*.mercadolibre.com.ar/*",
    "background",
    "notifications",
    "tabs"
  ],
  "browser_action": {
    "default_icon": {
      "16": "images/melipreguntas.png",
      "32": "images/melipreguntas.png"
    },
    "default_title": "MeliPreguntas",
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    "images/icon-48.png"
  ]
}
