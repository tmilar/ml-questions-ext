    "background",
    "notifications",
    "tabs"
  ],
  "browser_action": {
    "default_icon": {
      "16": "images/meliP_32x32.png",
      "32": "images/meliP_32x32.png"
    },
    "default_title": "MeliPreguntas",
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    "images/icon-48.png"
  ]
